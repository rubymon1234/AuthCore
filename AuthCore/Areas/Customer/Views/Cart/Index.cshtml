@using ShoppyWeb.ViewModel
﻿
@model PaginatedList<CartDetailsViewModel>
@{
    // List<CartDetails> cartDetails = ViewBag.Products;
}
<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Shopping Cart
                    </h5>
                </div>

            </div>
        </div>
        @if (Model.Items?.Count() > 0)
        {
            <div class="card-body my-4">
                <div class="row">
                </div>
                <div class="row mb-3 pb-3">
                    <div class="col-md-2 offset-md-1">
                        <a href="#" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                    </div>
                    <div class="col-md-10 offset-md-1">
                        @{
                            int grandTotal = 0; int grandsTotal = 0;
                        }
                        @foreach (var product in Model.Items)
                        {
                            grandsTotal = 0;
                            grandTotal += @product.Quantity * @product.TotalPrice;
                            grandsTotal += @product.Quantity * @product.TotalPrice;
                            <div class="row border-bottom pb-3">
                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                    <img src="\@product.url" data-holder-rendered="true" class="rounded" width="100%" />
                                </div>
                                <div class="col-12 col-lg-6 pt-md-3">
                                    <h5 class="text-uppercase text-secondary"><strong>@product.ProductName</strong></h5>
                                    <p><small>Contrary to popular belief <b>@product.ProductName</b></small></p>
                                </div>
                                <div class="col-12  col-lg-5 text-center row">
                                    <div class="col-3 text-md-right pt-2 pt-md-4">
                                        <h6 class="fw-semibold">
                                            QuPrice
                                            <span class="text-muted">
                                                <b>@product.TotalPrice</b>
                                            </span>
                                            <br>
                                            Quantity
                                            <span class="text-muted">
                                                <b>@product.Quantity</b>
                                            </span>
                                            <br>
                                            Total Price
                                            <span class="text-muted">
                                                <b> @grandsTotal</b>
                                            </span>
                                        </h6>
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                        <div class="w-75 btn-group" role="group">
                                            <a asp-area="Customer"
                                            asp-controller="Cart"
                                            asp-action="Plus"
                                            asp-route-cartId="@product.Id"
                                            class="btn btn-outline-primary bg-gradient py-2">
                                                <i class="bi bi-plus-square"></i>

                                            </a> &nbsp;
                                            <a asp-area="Customer"
                                            asp-controller="Cart"
                                            asp-action="Minus"
                                            asp-route-cartId="@product.Id"
                                            class="btn btn-outline-primary bg-gradient py-2">
                                                <i class="bi bi-dash-square"></i>
                                            </a>
                                        </div>

                                    </div>
                                    <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                        <a asp-area="Customer"
                                        asp-controller="Cart"
                                        asp-action="DeleteCartItem"
                                        asp-route-cartId="@product.Id"
                                        class="btn btn-danger bg-gradient py-2">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </div>

                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <div class="row">
                        <div class="col-md-4 offset-md-4">
                            <ul class="list-group mb-4">
                                <li class="d-flex justify-content-between align-items-center">
                                    <h5 class="text-dark fw-semibold text-uppercase"> Total (USD)</h5>
                                    <h4 class="text-dark fw-bolder">$@grandTotal</h4>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 offset-md-5">
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Checkout" class="btn btn-primary border-0 bg-gradient w-100 py-2">Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-2 offset-md-5 mb-4">
                    <h4>Your Cart is Empty</h4>
                </div>
            </div>
           
        }

        @*Paging*@
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6">
                <nav>
                    <ul class="pagination justify-content-end">
                        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                            <a class="page-link text-black" asp-route-pageNumber="1"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                <span>First</span>
                            </a>
                        </li>

                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link text-black" asp-route-pageNumber="@(Model.PageIndex - 1)"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                <span>Previous</span>
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                                <a class="page-link text-black" asp-route-pageNumber="@i"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link text-black" asp-route-pageNumber="@(Model.PageIndex + 1)"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                <span>Next</span>
                            </a>
                        </li>
                        <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link text-black" asp-route-pageNumber="@Model.TotalPages"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                <span>Last</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        </div>
</form>
